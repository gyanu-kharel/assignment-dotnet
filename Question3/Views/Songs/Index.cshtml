@model IEnumerable<Song>

 @{

 }

 <h1>Songs List</h1>

 <p style="text-align:right;margin-right:20px;">
    <a class="btn btn-outline-primary" asp-action="Add">Add New</a>
</p>

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ReleasedDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Artist)
                </th>
                <th></th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(model => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.ReleasedDate)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.Artist)
                    </td>
                    <td class="text-center">
                    <a asp-action="Edit" class="btn btn-outline-primary"  asp-route-id ="@item.Id">Edit</a>
                    </td>
                    <td class="text-center">
                        <a asp-action="Delete" class="btn btn-outline-danger" asp-route-id ="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>


